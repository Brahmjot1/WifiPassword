<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/ivClosed"
            android:layout_width="@dimen/_20sdp"
            android:src="@drawable/ic_closed"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/_20sdp"/>

        <LinearLayout
            android:layout_below="@+id/ivClosed"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Model"
                    android:textColor="@color/divider"
                    style="@style/myRegularTextView"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtModel"
                    android:layout_width="wrap_content"
                    android:text="Device-Model"
                    android:textColor="@color/white"
                    style="@style/myBoldTextView"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/offwhite"
                android:layout_height="@dimen/_1sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Brand"
                    android:textColor="@color/divider"
                    style="@style/myRegularTextView"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtBrand"
                    android:layout_width="wrap_content"
                    android:text="Device-Name"
                    android:textColor="@color/white"
                    style="@style/myBoldTextView"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/offwhite"
                android:layout_height="@dimen/_1sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Version"
                    android:textColor="@color/divider"
                    style="@style/myRegularTextView"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtSDK"
                    android:layout_width="wrap_content"
                    android:text="Device-Name"
                    android:textColor="@color/white"
                    style="@style/myBoldTextView"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/offwhite"
                android:layout_height="@dimen/_1sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Resolution"
                    android:textColor="@color/divider"
                    style="@style/myRegularTextView"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtResolution"
                    android:layout_width="wrap_content"
                    android:text="Device-Name"
                    android:textColor="@color/white"
                    style="@style/myBoldTextView"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>